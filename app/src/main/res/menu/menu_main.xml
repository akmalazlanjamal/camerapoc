<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.akmal5labs.camerapoc.MainActivity">
    <item
        android:id="@+id/menuOpenBackCamera"
        android:title="Open Back-Facing Camera"
        android:onClick="onMenuOpenBackCamera" />
    <item android:id="@+id/menuOpenFrontCamera"
        android:title="Open Front-Facing Camera"
        android:onClick="onMenuOpenFrontCamera"
        />
    <item android:id="@+id/menuCloseCamera"
        android:title="Close Camera"
        android:onClick="onMenuCloseCamera"
        />
    <item android:id="@+id/menuExit"
        app:showAsAction="always"
        android:title="Exit"
        android:onClick="onExit"
        android:icon="@android:drawable/ic_lock_power_off"/>
    <item android:id="@+id/menuTake"
        app:showAsAction="ifRoom"
        android:title="Snap"
        android:onClick="onTakePicture"
        android:icon="@android:drawable/ic_lock_power_off"/>
</menu>
